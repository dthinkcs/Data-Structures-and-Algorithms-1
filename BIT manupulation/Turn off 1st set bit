
#include <iostream>
using namespace std;
int turnOffFirstSetBit(int n){
    /* Don't write main().
     * Don't read input, it is passed as function argument.
     * Return output and don't print it.
     * Taking input and printing output is handled automatically.
     */
     int i=1;
    while(!(i&n))
       i=i<<1;
       i=~i;
    n=n&i;
    return n;
    
    
}


int main() {
	int n;

	cin >> n;
	
	cout<< turnOffFirstSetBit(n) <<endl;
		
	return 0;
}

